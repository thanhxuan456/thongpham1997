# ============================================
# ThemeVN Environment Configuration
# ============================================
# Copy this file to .env and update the values

# ============================================
# Database Configuration
# ============================================
# Database type: postgresql or mysql
DB_TYPE=postgresql

# PostgreSQL connection
DATABASE_URL=postgresql://themevn:your_password@localhost:5432/themevn

# OR MySQL connection
# DATABASE_URL=mysql://themevn:your_password@localhost:3306/themevn

# Individual database settings (for scripts)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=themevn
DB_USER=themevn
DB_PASSWORD=your_secure_password

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3000
DOMAIN=themevn.com

# ============================================
# Security
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# ============================================
# Email Configuration (Resend)
# ============================================
# Get your API key from https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxx
FROM_EMAIL=noreply@yourdomain.com

# ============================================
# Storage
# ============================================
UPLOAD_DIR=/var/www/themevn/uploads
MAX_FILE_SIZE=10485760

# ============================================
# Optional: Redis Cache
# ============================================
# REDIS_URL=redis://localhost:6379

# ============================================
# Optional: Analytics
# ============================================
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# FACEBOOK_PIXEL_ID=XXXXXXXXXX
